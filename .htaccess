# Disable directory listing
Options -Indexes

RewriteEngine On

# Security protections
RewriteCond %{QUERY_STRING} (\<|%3C).*script.*(\>|%3E) [NC,OR]
RewriteCond %{QUERY_STRING} GLOBALS(=|\[|\%[0-9A-Z]{0,2}) [OR]
RewriteCond %{QUERY_STRING} _REQUEST(=|\[|\%[0-9A-Z]{0,2}) [OR]
RewriteCond %{QUERY_STRING} proc/self/environ [OR]
RewriteCond %{QUERY_STRING} base64_(en|de)code[^(]*\([^)]*\) [OR]
RewriteCond %{QUERY_STRING} (eval\(|base64_decode|gzinflate|gzuncompress) [NC,OR]
RewriteCond %{QUERY_STRING} (union.*select|insert.*into|delete.*from) [NC,OR]
RewriteCond %{QUERY_STRING} (javascript:|vbscript:|onload=|onerror=) [NC]
RewriteRule .* - [F,L]

# Directory Traversal Protection
RewriteCond %{QUERY_STRING} \.\./ [NC,OR]
RewriteCond %{QUERY_STRING} \.\.\\ [NC,OR]
RewriteCond %{QUERY_STRING} \.\.[\w] [NC]
RewriteRule .* - [F,L]

# Security headers for media
<IfModule mod_headers.c>
    Header set X-Content-Type-Options "nosniff"
    Header set X-Frame-Options "DENY"
    Header set Referrer-Policy "strict-origin-when-cross-origin"
    
    # CORS for media (adjust as needed)
    Header set Access-Control-Allow-Origin "*"
    Header set Access-Control-Allow-Methods "GET, HEAD, OPTIONS"
    Header set Access-Control-Allow-Headers "Range"
    
    # Cache control for media files
    <FilesMatch "\.(jpg|jpeg|png|gif|webp|mp4|webm|wav|mp3|m4a|m3u8|ts)$">
        Header set Cache-Control "public, max-age=31536000"
    </FilesMatch>
</IfModule>

# Route non-existent files through index.php for custom handling
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteCond %{REQUEST_URI} !\.php$ [NC]
RewriteRule ^(.*)$ index.php [QSA,L]

# Enable compression for text-based files
<IfModule mod_deflate.c>
    AddOutputFilterByType DEFLATE text/plain
    AddOutputFilterByType DEFLATE text/html
    AddOutputFilterByType DEFLATE text/xml
    AddOutputFilterByType DEFLATE text/css
    AddOutputFilterByType DEFLATE application/xml
    AddOutputFilterByType DEFLATE application/xhtml+xml
    AddOutputFilterByType DEFLATE application/rss+xml
    AddOutputFilterByType DEFLATE application/javascript
    AddOutputFilterByType DEFLATE application/json
</IfModule>

